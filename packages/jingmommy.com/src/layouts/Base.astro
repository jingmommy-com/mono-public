---
import "../styles/global.css"
import Head from "../components/Head.astro"
const { title } = Astro.props
---

<!doctype html>
<html lang="zh-tw">
  <Head title={title}>
    <style>
      html,
      body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: 'Noto Sans TC', 'Microsoft JhengHei', 'Microsoft YaHei', 'PingFang TC', 'PingFang SC', Arial, Helvetica, sans-serif;
      }
    </style>
  </Head>
  <body class="font-sans antialiased">
    <slot />
  </body>
</html>
